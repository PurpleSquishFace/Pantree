@model List<LocationView>

<div class="navbar-menu">
    <h2>New</h2>
    <ul>
        <li><a asp-controller="Warehouse" asp-action="CreateLocation">Location</a></li>
        @if (Model.Count > 0)
        {
            <li><a asp-controller="Warehouse" asp-action="CreateStore">Store</a></li>
        }
    </ul>


    @foreach (var location in Model)
    {
        <hr />

        <a asp-controller="Warehouse" asp-action="Location" asp-route-id="@location.LocationID">
            <h2>@location.LocationName @(!location.LocationOwner ? "(Shared)" : "")</h2>
        </a>
        <ul>
            @foreach (var store in location.Stores)
            {
                <li>
                    <a asp-controller="Warehouse" asp-action="Store" asp-route-id="@store.StoreID">@store.StoreName</a>
                </li>
            }
        </ul>
    }

    <hr />

    <h2>Shopping List</h2>

</div>
